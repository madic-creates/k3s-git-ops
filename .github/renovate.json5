{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  onboarding: false,
  requireConfig: 'ignored',
  extends: [
    'config:recommended',
  ],
  assignees: [
    'madic-creates',
  ],
  repositories: [
    'madic-creates/k3s-git-ops',
  ],
  gitAuthor: 'Renovate Bot <bot@renovateapp.com>',
  prConcurrentLimit: 0,
  prHourlyLimit: 0,
  platform: 'github',
  kubernetes: {
    managerFilePatterns: [
      '/apps/.+/k8s\\..*\\.yaml$/',
    ],
  },
  automerge: true,
  automergeType: 'branch',
  ignoreTests: true,
  major: {
    automerge: false,
  },
  minor: {
    automerge: true,
  },
  patch: {
    automerge: true,
  },
  packageRules: [
    {
      matchFileNames: [
        'apps/mariadb/**',
        'apps/traefik/**',
        'apps/kubevip-ha/**',
        'apps/paperless-ai/**',
        'apps/pihole/**',
        'apps/monitoring-checkmk-server/**',
        'apps/argo-cd-apps-helm/**',
      ],
      automerge: false,
    },
    {
      matchDatasources: [
        'helm',
      ],
      matchPackageNames: [
        'longhorn',
      ],
      minimumReleaseAge: '14 days',
      automerge: false,
    },
    {
      matchManagers: [
        'pre-commit',
      ],
      automerge: false,
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/apps/.+/kustomization\\.yaml$/',
      ],
      matchStrings: [
        'repository: (?<depName>.*)\\s.*tag: (?<currentValue>.*)',
      ],
      datasourceTemplate: 'docker',
    },
    {
      customType: 'regex',
      managerFilePatterns: [
        '/apps/.+/kustomization\\.yaml$/',
      ],
      matchStrings: [
        'image:\\s*(?<depName>[^:\\s]+):(?<currentValue>.*)',
      ],
      datasourceTemplate: 'docker',
    },
  ],
  'pre-commit': {
    enabled: true,
  },
  minimumReleaseAge: '5 days',
  internalChecksFilter: 'strict',
}
