// code: language=jsonc
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "onboarding": false,
  "requireConfig": "ignored",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "madic-creates"
  ],
  "repositories": [
    "madic-creates/k3s-git-ops"
  ],
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "platform": "github",
  "kubernetes": {
    "fileMatch": [
      "apps\/.+\/k8s\\..*\\.yaml$"
    ]
  },
  "automerge": true,
  "automergeType": "branch",
  "ignoreTests": true,
  "major": {
    "automerge": false
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchFileNames": [
        "apps/mariadb",
        "apps/traefik",
        "apps/monitoring",
        "apps/kubevip-ha"
      ],
      "automerge": false
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "longhorn"
      ],
      "minimumReleaseAge": "14 days",
      "automerge": false
    },
    {
      "matchManagers": [
        "pre-commit"
      ],
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "apps\/.+\/kustomization\\.yaml$"
      ],
      "matchStrings": [
        "repository: (?<depName>.*)\\s.*tag: (?<currentValue>.*)"
      ],
      //"matchStrings": [
      //  "(?:repository:|image:)\\s*(?<depName>[^:\\s]+)(?::\\s*|\\s.*tag:\\s*)(?<currentValue>\\S+)"
      //],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "apps\/.+\/kustomization\\.yaml$"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>[^:\\s]+):(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "pre-commit": {
    "enabled": true
  },
  "minimumReleaseAge": "5 days",
  "internalChecksFilter": "strict"
}
